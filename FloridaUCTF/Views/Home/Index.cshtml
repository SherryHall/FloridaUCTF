@model FloridaUCTF.Models.SearchViewModel

@{
	ViewBag.Title = "Index";
}



@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	
	<div class="form-horizontal">
		<h2 class="text-center">Search Unlicensed Contractor Cases </h2>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
