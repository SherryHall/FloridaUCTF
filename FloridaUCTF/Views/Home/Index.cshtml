					</div>
				</div>
				<div class="form-group">
					@Html.LabelFor(model => model.DriveLicense, htmlAttributes: new { @class = "control-label col-md-4" })
					<div class="col-md-8">
						@Html.EditorFor(model => model.DriveLicense, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.DriveLicense, "", new { @class = "text-danger" })
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="panel group-heading"> LOCATION OF OFFENSE </div>
				<div class="form-group">
					@Html.LabelFor(model => model.CaseCity, htmlAttributes: new { @class = "control-label col-md-3" })
					<div class="col-md-9">
						@Html.EditorFor(model => model.CaseCity, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.CaseCity, "", new { @class = "text-danger" })
					</div>
