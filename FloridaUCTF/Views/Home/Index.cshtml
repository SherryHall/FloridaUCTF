		</div>
		<div class="form-group">
			<div class="col-md-12 text-center">
				<input type="submit" value="Search" class="btn btn-primary" />
			</div>
		</div>
		<div>
			@Html.ActionLink("Add Offender", "AddOffender","Home", new { @class = "btn btn-warning" } );
		</div>

	</div>
	<div id="showSearchTable">

	@Html.Partial("SearchResultsTable", Model)
	</div>
}


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
