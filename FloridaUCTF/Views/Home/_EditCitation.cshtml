@model FloridaUCTF.Models.Citation


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.Id)
		@Html.HiddenFor(model => model.CaseId)
		<div class="row">
			<div class="col-md-4">
				<div class="form-group">
					@Html.LabelFor(model => model.CitationNumber, htmlAttributes: new { @class = "control-label col-md-2" })
					<div class="col-md-10">
						@Html.EditorFor(model => model.CitationNumber, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.CitationNumber, "", new { @class = "text-danger" })
					</div>
				</div>
			</div>
			<div class="col-md-8">
				<div class="form-group">
					@Html.LabelFor(model => model.StatuteOrdinance, htmlAttributes: new { @class = "control-label col-md-3 text-left" })
					<div class="col-md-9">
						@Html.EditorFor(model => model.StatuteOrdinance, new { htmlAttributes = new { @class = "form-control" } })
						@Html.ValidationMessageFor(model => model.StatuteOrdinance, "", new { @class = "text-danger" })
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="form-group">
				@Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-1" })

				<div class="col-md-11">
					@Html.TextAreaFor(model => model.Description, 5, 200, new { htmlAttributes = new { @class = "form-control long-text" } })
					@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-12 text-center">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</div>
	</div>
}
